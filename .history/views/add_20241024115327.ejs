    <div class="paper list">
        <a class="active" data-id="1">Cake</a>
        <a class="" data-id="2">Taco</a>
        <a class="" data-id="3">Peanut Butter and Jelly Sandwich</a>
    </div>
    
    <div class="container">
    <div class="paper hdg">
        <h1>Book store</h1>
      </div>
      
      
    
    <form class="recipe-form hdg paper" style="width: 660px;" action="/addData" method="post">
 
 
      <h2  style="margin-bottom: 30px; font-size: 35px;">Add a New  Book Data</h2>
       
     <label for="recipe-name" style="margin-bottom: 5px;">Book Name:</label>
     <input type="text" id="recipe-name" placeholder="Enter Book name" required name="name" style="margin-bottom:13px; width: 350px;">

     <label for="recipe-name" style="margin-bottom: 5px;">Book  Price:</label>
     <input type="text" id="recipe-name" placeholder="Enter Book  Price" required name="price" style="margin-bottom:13px; width: 350px;">

     <label for="recipe-name" style="margin-bottom: 5px;">Book   Pages:</label>
     <input type="text" id="recipe-name" placeholder="Enter Book  Pages" required name="pages" style="margin-bottom:13px; width: 350px;">


      <label for="recipe-description" style="margin-bottom: 20px;">Description:</label>
      <textarea id="recipe-description" rows="4" placeholder="Enter Book description" name="description" style="margin-bottom: 13px; width: 350px;" required></textarea>

      <button type="submit">Add Book</button>
  
    </form>

  </div> 
 
