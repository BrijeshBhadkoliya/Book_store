<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>view</title>
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
       
</head>
<body>
    <div class="container">
        <div class="paper hdg text-center my-5">
          <h1>Blog card</h1>
        </div>
    
        <!-- Card Grid -->
        <div class="row">
          <% data.map((val, i) => {
            const { _id, Heading, Date, Description} = val; %>
            <div class="col-md-4 mb-4">
              <div class="card">
                <img src="#" class="card-img-top" alt="Book image" style="width: 410px; height: 410px  ;" >
                <div class="card-body">
                  <h3 class="card-title"><%= Heading %></h3>
                  <h6 class="card-title" style="font-size: 25px; margin-top: 18px;"><%= Date %></h6>
                  <p class="card-text" style="color: white; margin-top: 25px; font-size: 16px; max-width: 280px;"> <%= Description %></p>
                  <div class="d-flex">
                    <a class="btn btn-danger" href="/deletRecord?id=<%= _id %>">Delete</a>
                    <a class="btn btn-primary" href="/editData?id=<%= _id %>">Edit</a>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
    </div>
    <script src="js/bootstrap.bundle.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>